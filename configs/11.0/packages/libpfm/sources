ATSRC_PACKAGE_NAME="Libpfm"
ATSRC_PACKAGE_VER=4.8.0
ATSRC_PACKAGE_REV=f3c229370d40
ATSRC_PACKAGE_LICENSE="MIT"
ATSRC_PACKAGE_DOCLINK="http://perfmon2.sourceforge.net/docs_v4.html"
ATSRC_PACKAGE_RELFIXES=
ATSRC_PACKAGE_STR_VER="${ATSRC_PACKAGE_NAME} ${ATSRC_PACKAGE_VER}${ATSRC_PACKAGE_REV:+-${ATSRC_PACKAGE_REV}}"
ATSRC_PACKAGE_PRE="test -d libpfm-${ATSRC_PACKAGE_VER}${ATSRC_PACKAGE_REV:+-${ATSRC_PACKAGE_REV}}"
ATSRC_PACKAGE_CO=([0]="git clone git://git.code.sf.net/p/perfmon2/libpfm4 libpfm")
ATSRC_PACKAGE_GIT="git checkout -b libpfm-${ATSRC_PACKAGE_VER}${ATSRC_PACKAGE_REV:+-${ATSRC_PACKAGE_REV}} ${ATSRC_PACKAGE_REV}"
ATSRC_PACKAGE_POST="mv libpfm libpfm-${ATSRC_PACKAGE_VER}${ATSRC_PACKAGE_REV:+-${ATSRC_PACKAGE_REV}}"
ATSRC_PACKAGE_SRC="${AT_BASE}/sources/libpfm-${ATSRC_PACKAGE_VER}${ATSRC_PACKAGE_REV:+-${ATSRC_PACKAGE_REV}}"
ATSRC_PACKAGE_WORK=${AT_WORK_PATH}/libpfm
ATSRC_PACKAGE_MLS=
ATSRC_PACKAGE_ALOC=
ATSRC_PACKAGE_PATCHES=
ATSRC_PACKAGE_TARS=
ATSRC_PACKAGE_MAKE_CHECK=
ATSRC_PACKAGE_DISTRIB=no
ATSRC_PACKAGE_BUNDLE=profile
